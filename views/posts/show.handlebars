{{> header}}

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="post">
        <h2>{{post.title}}</h2>
        <p>{{post.body}}</p>
        <small class="text-muted">Written by {{post.User.username}} on {{moment post.createdAt format='lll'}}</small>
      </div>
    </div>
  </div>
</div>

