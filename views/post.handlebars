
<div class="post-content">
	<div class="container postBoxCont">
		<div class="row headerRow">
			<div>
				<h2 class="postTitle">{{name}}</h2>
			</div>
			<div>
				<p class="createPost">- This post was by Captain {{user.username}} -</p>
			</div>
		</div>
		<p class="describePost">{{description}}</p>
		</div>	
</div>


			<form class="addComment" data-postid={{id}}>
			<div class="text">
				<textarea id='comment-desc'
				placeholder="Dare to comment (be civil)..."
				cols="30"
				rows="2"></textarea>
			</div>
			<div class="btnComment">
				<button class="submitComment" type="submit">Add to the discourse</button>
			</div>
		</form>

{{> comment}}
	

<script src="./js/comment.js></script>
