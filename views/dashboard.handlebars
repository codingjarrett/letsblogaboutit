<div class="usersPosts">
  <!-- Loop over each object in the projects array -->
  {{#each posts as |post| }}
  <div class="row mb-4 post" data-id="{{post.id}}">
    <div class="col-md-5">
      <a href="/post/{{post.id}}">
        <h3>{{post.title}}</h3>
        <h5>{{format_date post.date_created}}</h5>
      </a>
      <button><a href="/post/{{post.id}}/deleteUpdate">Edit Post</a></button>
    </div>
  </div>
  {{/each}}

  <button class="newPost">New Post</button>
</div>


<div class="col-md-6 hidden createPost">
  <h3>Create a New Post</h3>

  <form class="form new-post">
    <div class="form-group">
      <label for="post-title">Title</label>
      <input class="form-input post-title" type="text" name="post-title" />
    </div>
    <div class="form-group">
      <label for="post-content">Content</label>
      <input class="form-input post-content" type="text" name="post-content" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<script src="./js/dashboard.js"></script>