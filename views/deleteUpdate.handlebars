<div class="col-md-6">
    <h3>Edit Post</h3>

    <form class="form edit-post" data-id="{{id}}">
        <div class="form-group">
            <label for="post-title">Title</label>
            <input class="form-input post-title" type="text" name="post-title" value="{{title}}" />
        </div>
        <div class="form-group">
            <label for="post-content">Content</label>
            <input class="form-input post-content" type="text" name="post-content" value="{{content}}" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary update">Update Post</button>
            <button type="submit" class="btn btn-primary delete">Delete</button>
        </div>
    </form>
</div>

<script src="./js/deleteUpdate.js"></script>